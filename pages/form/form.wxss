.form-content{
  position: absolute;
  width: 100%;
  height: 700rpx;
  top: 25%;
  /* background-color: #fff; */
}

.form-content .title{
  font-size: 50rpx;
  font-weight: bold;
  margin-left: 60rpx;
}
.form-content .input-content{
  margin-top: 150rpx;
}
.form-content .input-content input{
  box-sizing: border-box;
  border: 2rpx solid #888;
  border-radius: 15rpx;
  width: 85%;
  margin: 30rpx auto;
  height: 100rpx;
  padding-left: 40rpx;
  background-color: #fff;
}

.btn-content{
  margin-top: 100rpx;
}